# Database
DATABASE_URL="postgresql://username:password@localhost:5432/electricity_tokens"

# NextAuth.js
# NEXTAUTH_URL is automatically detected from request headers - no need to set
# This allows the app to work on any host/port dynamically
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# App Configuration
NODE_ENV="development"
APP_NAME="Electricity Tokens Tracker"
ADMIN_EMAIL="admin@example.com"

# Email (optional for notifications)
EMAIL_FROM=""
EMAIL_SERVER=""