# Production Environment Variables for Vercel Deployment
# Copy this file and set these variables in your Vercel dashboard

# Database - PostgreSQL Production
DATABASE_URL="postgresql://username:password@host:5432/electricity_tokens_prod?schema=public&sslmode=require"

# NextAuth.js - Production Configuration
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="your-super-secure-32-character-secret-key-here"

# Security Configuration
CSRF_SECRET="your-csrf-secret-key-32-chars-minimum"
ENCRYPTION_KEY="your-encryption-key-32-chars-minimum"
RATE_LIMIT_SECRET="your-rate-limit-secret-32-chars"

# App Configuration
NODE_ENV="production"
APP_NAME="Electricity Tokens Tracker"
ADMIN_EMAIL="admin@yourdomain.com"

# Optional: OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Optional: Email Configuration (for notifications)
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_SERVER="smtp://username:password@smtp.provider.com:587"

# Optional: Error Tracking (Sentry)
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Optional: Analytics
VERCEL_ANALYTICS_ID=""

# Database Connection Pool (for high traffic)
DATABASE_POOL_SIZE="20"
DATABASE_TIMEOUT="30000"

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_REQUESTS_PER_HOUR="1000"

# Security Headers
SECURITY_HEADERS_ENABLED="true"
CSP_REPORT_URI=""